# ===============================
# X API CREDENTIALS (formerly Twitter)
# ===============================
# Get these from: https://developer.x.com/
TWITTER_CONSUMER_KEY=your_consumer_key_here
TWITTER_CONSUMER_SECRET=your_consumer_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# ===============================
# RSS FEED CONFIGURATION
# ===============================
# Get RSS feeds from: https://rss.app/
# Format: https://rss.app/feeds/YOUR_FEED_ID.csv
RSS_FEED_1_URL=https://rss.app/feeds/YOUR_FEED_1_ID.csv
RSS_FEED_2_URL=https://rss.app/feeds/YOUR_FEED_2_ID.csv

# Maximum posts to fetch from each feed
RSS_FEED_1_LIMIT=10
RSS_FEED_2_LIMIT=10

# ===============================
# OPENROUTER AI CONFIGURATION
# ===============================
# Get API key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Model to use (free tier recommended)
# Options: meta-llama/llama-3.2-3b-instruct:free, google/gemini-flash-1.5:free
AI_MODEL=meta-llama/llama-3.2-3b-instruct:free

# AI Configuration
AI_RETRY_ATTEMPTS=3
AI_MAX_TOKENS=150
AI_TEMPERATURE=0.7

# Risk Assessment (10.0 = disabled, saves AI credits)
BLOCK_RISK_THRESHOLD=10.0

# Maximum AI requests per run (stay under 50/day for free tier)
MAX_AI_REQUESTS_PER_RUN=40

# ===============================
# BOT BEHAVIOR CONFIGURATION
# ===============================
# Test mode (set to true to test without posting)
DRY_RUN=false

# How many posts to attempt per run
POSTS_PER_RUN=1

# Maximum posts per day (recommended: 17 or less)
DAILY_POST_LIMIT=17

# Seconds to wait between posts
SLEEP_BETWEEN_POSTS=60

# ===============================
# RATE LIMIT SETTINGS
# ===============================
# Seconds to wait on rate limit
RATE_LIMIT_WAIT=180

# Maximum retries for posting
MAX_RETRIES=3
